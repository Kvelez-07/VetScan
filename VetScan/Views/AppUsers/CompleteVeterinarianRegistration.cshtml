@using VetScan.ViewModels
@model VeterinarianFormViewModel

@{
    ViewData["Title"] = "Completar Registro de Veterinario";
}

<style>
    body {
        background: linear-gradient(to right, #1e3c72, #2a5298);
        color: #f5f5f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(16px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        color: #fff;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(to right, #00c6ff, #0072ff);
        border-bottom: none;
        padding: 1.5rem;
    }

        .card-header h2 {
            font-size: 1.8rem;
            font-weight: 600;
        }

    .form-label {
        font-weight: 500;
    }

    .form-control,
    .form-select,
    textarea.form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid #00f0ff;
        color: #fff;
        border-radius: 10px;
        padding: 0.75rem;
        font-weight: 500;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control::placeholder,
        textarea::placeholder {
            color: #ccc;
            opacity: 0.8;
        }

        .form-control:focus,
        .form-select:focus,
        textarea:focus {
            border-color: #00f0ff;
            box-shadow: 0 0 0 0.2rem rgba(0, 240, 255, 0.25);
            outline: none;
        }

    .form-select {
        appearance: none;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 140 140' xmlns='http://www.w3.org/2000/svg'%3E%3Cpolyline points='20,50 70,100 120,50' fill='none' stroke='%2300f0ff' stroke-width='20'/%3E%3C/svg%3E");
        background-repeat: no-repeat;
        background-position: right 1rem center;
        background-size: 1rem;
    }

    select.form-select option {
        background-color: #1e3c72; /* Fondo oscuro sólido */
        color: #fff; /* Texto blanco */
        padding: 10px;
        font-weight: 500;
    }

    select.form-select:disabled option {
        color: #888;
    }

    .btn-primary {
        background: linear-gradient(to right, #00f0ff, #0072ff);
        border: none;
        font-weight: bold;
        padding: 0.75rem;
        border-radius: 12px;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #0072ff, #00f0ff);
            transform: scale(1.02);
            box-shadow: 0 0 12px rgba(0, 240, 255, 0.5);
        }

    .text-danger {
        font-size: 0.9rem;
    }

    h2.text-center {
        margin-bottom: 0;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="CompleteVeterinarianRegistration" method="post">
                        <input type="hidden" name="userId" value="@ViewBag.UserId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Nombre</label>
                                <input class="form-control" value="@Model.FirstName @Model.LastName" disabled />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Correo</label>
                                <input class="form-control" value="@Model.Email" disabled />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="YearsOfExperience" class="form-label">Años de Experiencia</label>
                                <input asp-for="YearsOfExperience" type="number" class="form-control" />
                                <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SpecialtyId" class="form-label">Especialidad</label>
                                <select asp-for="SpecialtyId" class="form-select" asp-items="@(new SelectList(ViewBag.Specialties, "SpecialtyId", "SpecialtyName"))">
                                    <option value="">-- Seleccione una especialidad --</option>
                                </select>
                                <span asp-validation-for="SpecialtyId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Education" class="form-label">Educación/Formación</label>
                            <textarea asp-for="Education" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Education" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Completar Registro</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}