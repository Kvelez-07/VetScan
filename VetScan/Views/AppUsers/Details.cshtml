@model VetScan.ViewModels.AppUsersListViewModel
@{
    ViewData["Title"] = "Detalles de Usuario";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">@Model.Username</h2>
                <div>
                    <a asp-action="ExportDetailsToPdf" asp-route-id="@Model.UserId" class="btn btn-sm btn-danger me-2">
                        <i class="bi bi-file-earmark-pdf"></i> Exportar
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Usuario:</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Nombre completo:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Correo electrónico:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Rol:</dt>
                <dd class="col-sm-9">@Model.RoleName</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@(Model.PhoneNumber ?? "N/A")</dd>
            </dl>
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-list"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>