@using VetScan.ViewModels
@model RequestPasswordResetViewModel

@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<style>
    body {
        background: linear-gradient(to right, #1e3c72, #2a5298);
        color: #f5f5f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(16px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.15);
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        color: #fff;
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(to right, #00c6ff, #0072ff);
        border-bottom: none;
        padding: 1.5rem;
    }

        .card-header h2 {
            font-size: 1.8rem;
            font-weight: 600;
            margin: 0;
        }

    .form-label {
        font-weight: 500;
        color: #c0eefd;
    }

    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid #00f0ff;
        color: #fff;
        border-radius: 10px;
        padding: 0.75rem;
        font-weight: 500;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control::placeholder {
            color: #ccc;
            opacity: 0.8;
        }

        .form-control:focus {
            border-color: #00f0ff;
            box-shadow: 0 0 0 0.2rem rgba(0, 240, 255, 0.25);
            outline: none;
        }

    .btn-primary {
        background: linear-gradient(to right, #00f0ff, #0072ff);
        border: none;
        font-weight: bold;
        padding: 0.75rem;
        border-radius: 12px;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #0072ff, #00f0ff);
            transform: scale(1.02);
            box-shadow: 0 0 12px rgba(0, 240, 255, 0.5);
        }

    .text-danger {
        font-size: 0.9rem;
    }

    .card-footer a {
        color: #00f0ff;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .card-footer a:hover {
            color: #0072ff;
            text-decoration: underline;
        }

    /* ReCaptcha container spacing */
    .g-recaptcha {
        margin-bottom: 1rem;
        filter: drop-shadow(0 0 2px rgba(0, 240, 255, 0.7));
        border-radius: 10px;
        overflow: hidden;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="RequestPasswordReset" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Correo electrónico</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="g-recaptcha"
                                 data-sitekey="6LcEiZcrAAAAAG8O6RiFcZWrQw8ZEmit9frFjtTG"
                                 data-callback="onRecaptchaSuccess"
                                 data-error-callback="onRecaptchaError"
                                 data-expired-callback="onRecaptchaExpired"></div>
                            @Html.ValidationMessage("ReCaptcha", new { @class = "text-danger" })
                        </div>

                        <input type="hidden" asp-for="RecaptchaToken" id="recaptchaToken" />

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" id="submitButton">
                                <span id="submitText">Enviar enlace</span>
                                <span id="spinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Login">Volver a inicio de sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        function onRecaptchaSuccess(token) {
            document.getElementById('recaptchaToken').value = token;
        }
        function onRecaptchaError() {
            document.getElementById('recaptchaToken').value = '';
        }
        function onRecaptchaExpired() {
            document.getElementById('recaptchaToken').value = '';
        }

        // Add form submission feedback
        document.getElementById('resetForm').addEventListener('submit', function() {
            const submitButton = document.getElementById('submitButton');
            const submitText = document.getElementById('submitText');
            const spinner = document.getElementById('spinner');

            submitButton.disabled = true;
            submitText.textContent = 'Enviando...';
            spinner.classList.remove('d-none');
        });
    </script>
}