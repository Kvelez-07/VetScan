@using VetScan.ViewModels
@model AppUsersListViewModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">@ViewData["Title"]</h2>
                <a asp-action="Index" class="btn btn-light">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>

        <div class="card-body">
            <h3 class="text-danger">¿Estás seguro que deseas eliminar este usuario?</h3>
            <p class="text-muted">Esta acción no se puede deshacer. Todos los datos asociados a este usuario serán eliminados permanentemente.</p>

            <div class="alert alert-warning">
                <strong>Advertencia:</strong> La eliminación de usuarios puede afectar la integridad de los datos del sistema.
            </div>

            <dl class="row mt-4">
                <dt class="col-sm-3">Usuario:</dt>
                <dd class="col-sm-9">@Model.Username</dd>

                <dt class="col-sm-3">Nombre completo:</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Correo electrónico:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Rol:</dt>
                <dd class="col-sm-9">@Model.RoleName</dd>

                <dt class="col-sm-3">Teléfono:</dt>
                <dd class="col-sm-9">@(Model.PhoneNumber ?? "N/A")</dd>
            </dl>
        </div>

        <div class="card-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="UserId" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirmar Eliminación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 800px;
        margin: 0 auto;
    }

    .card-header h2 {
        font-size: 1.5rem;
    }

    dt {
        font-weight: 500;
    }
</style>