@using VetScan.ViewModels
@model VaccineFormViewModel
@{
    ViewData["Title"] = "Registro de Vacuna";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0"><i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]</h2>
                        <a asp-action="Index" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" class="needs-validation" novalidate method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <strong>Por favor corrija los siguientes errores:</strong>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-8">
                                <label asp-for="VaccineName" class="form-label fw-semibold">Nombre de la Vacuna</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-shield text-primary"></i></span>
                                    <input asp-for="VaccineName" class="form-control" required />
                                </div>
                                <span asp-validation-for="VaccineName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="VaccineType" class="form-label fw-semibold">Tipo de Vacuna</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-tag text-primary"></i></span>
                                    <select asp-for="VaccineType" class="form-select" required>
                                        <option value="">-- Seleccione tipo --</option>
                                        @foreach (var type in ViewBag.VaccineTypes)
                                        {
                                            <option value="@type">@type</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="VaccineType" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Manufacturer" class="form-label fw-semibold">Fabricante</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-building text-primary"></i></span>
                                    <input asp-for="Manufacturer" class="form-control" />
                                </div>
                                <span asp-validation-for="Manufacturer" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SpeciesId" class="form-label fw-semibold">Especie</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-bug text-primary"></i></span>
                                    <select asp-for="SpeciesId" class="form-select">
                                        <option value="">-- Para todas las especies --</option>
                                        @foreach (var species in ViewBag.Species)
                                        {
                                            <option value="@species.SpeciesId">@species.DisplayText</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="SpeciesId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="RecommendedAge" class="form-label fw-semibold">Edad Recomendada</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-calendar text-primary"></i></span>
                                    <input asp-for="RecommendedAge" class="form-control" placeholder="Ej: 8 semanas" />
                                </div>
                                <span asp-validation-for="RecommendedAge" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BoosterInterval" class="form-label fw-semibold">Intervalo de Refuerzo (días)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-clock-history text-primary"></i></span>
                                    <input asp-for="BoosterInterval" type="number" class="form-control" placeholder="En días" />
                                </div>
                                <span asp-validation-for="BoosterInterval" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsCore" class="form-check-input" type="checkbox" role="switch">
                                    <label asp-for="IsCore" class="form-check-label fw-semibold">Vacuna Básica</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" checked>
                                    <label asp-for="IsActive" class="form-check-label fw-semibold">Activa</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Registrar Vacuna
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control, .form-select, .input-group-text {
        border-radius: 0.375rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

    .card {
        border-radius: 0.5rem;
    }

    .form-switch .form-check-input {
        width: 3em;
        height: 1.5em;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}