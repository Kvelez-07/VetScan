@using VetScan.ViewModels
@model VaccineListViewModel
@{
    ViewData["Title"] = "Detalles de Vacuna";
    var exporting = Context.Request.Query["exporting"].FirstOrDefault() == "true";

    if (exporting)
    {
        Layout = null;
        <style>
            body {
                padding: 20px;
                background-color: white !important;
            }

            .no-export {
                display: none !important;
            }
        </style>
    }
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center @(exporting ? "no-export" : "")">
                <h2 class="h5 mb-0"><i class="bi bi-shield me-2"></i>@Model.VaccineName</h2>
                <div>
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download me-1"></i> Exportar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToPdf" asp-route-id="@Model.VaccineId">
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.VaccineId" asp-route-format="png">
                                    <i class="bi bi-file-image text-success me-2"></i> PNG
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.VaccineId" asp-route-format="jpg">
                                    <i class="bi bi-file-image text-info me-2"></i> JPG
                                </a>
                            </li>
                        </ul>
                    </div>

                    <a asp-action="Edit" asp-route-id="@Model.VaccineId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.VaccineName</dd>

                        <dt class="col-sm-4">Fabricante:</dt>
                        <dd class="col-sm-8">@(Model.Manufacturer ?? "N/A")</dd>

                        <dt class="col-sm-4">Tipo:</dt>
                        <dd class="col-sm-8">@(Model.VaccineType ?? "N/A")</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Especie:</dt>
                        <dd class="col-sm-8">@Model.SpeciesName</dd>

                        <dt class="col-sm-4">Tipo:</dt>
                        <dd class="col-sm-8"><span class="badge @Model.CoreBadgeClass">@Model.CoreStatus</span></dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8"><span class="badge @Model.ActiveBadgeClass">@(Model.IsActive ? "Activa" : "Inactiva")</span></dd>
                    </dl>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Edad Recomendada:</dt>
                        <dd class="col-sm-8">@(ViewBag.RecommendedAge ?? "N/A")</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Intervalo de Refuerzo:</dt>
                        <dd class="col-sm-8">@(ViewBag.BoosterInterval != null ? $"{ViewBag.BoosterInterval} días" : "N/A")</dd>
                    </dl>
                </div>
            </div>

            @if (!exporting)
            {
                <div class="mt-4">
                    <h5 class="fw-semibold border-bottom pb-2 mb-3">Información Adicional</h5>
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-info-circle fs-4 me-3"></i>
                        <div>
                            <h6 class="alert-heading mb-1">Registros de vacunación</h6>
                            <p class="mb-0">Para ver el historial de vacunación de mascotas con esta vacuna.</p>
                            <a asp-controller="MedicalRecords" asp-action="Index" asp-route-vaccineId="@Model.VaccineId" class="btn btn-link p-0">
                                Ver registros de vacunación <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i> ID: @Model.VaccineId | Registrada: @ViewBag.CreatedDate
                </small>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-list me-1"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
    }

    dt {
        color: #6c757d;
    }

    .badge.bg-primary {
        background-color: #0d6efd !important;
    }

    .badge.bg-success {
        background-color: #198754 !important;
    }

    .badge.bg-secondary {
        background-color: #6c757d !important;
    }

    .badge.bg-warning {
        background-color: #ffc107 !important;
        color: #000;
    }
</style>