@using VetScan.ViewModels
@model PetListViewModel
@{
    ViewData["Title"] = "Detalles de Mascota";
    var exporting = Context.Request.Query["exporting"].FirstOrDefault() == "true";

    if (exporting)
    {
        Layout = null;
        <style>
            body {
                padding: 20px;
                background-color: white !important;
            }

            .no-export {
                display: none !important;
            }
        </style>
    }
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center @(exporting ? "no-export" : "")">
                <h2 class="h5 mb-0"><i class="bi bi-heart me-2"></i>@Model.PetName</h2>
                <div>
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download me-1"></i> Exportar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToPdf" asp-route-id="@Model.PetId">
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.PetId" asp-route-format="png">
                                    <i class="bi bi-file-image text-success me-2"></i> PNG
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.PetId" asp-route-format="jpg">
                                    <i class="bi bi-file-image text-info me-2"></i> JPG
                                </a>
                            </li>
                        </ul>
                    </div>

                    <a asp-action="Edit" asp-route-id="@Model.PetId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Código:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.PetCode</dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8">@Model.PetName</dd>

                        <dt class="col-sm-4">Dueño:</dt>
                        <dd class="col-sm-8">@Model.OwnerName</dd>

                        <dt class="col-sm-4">Especie:</dt>
                        <dd class="col-sm-8">@Model.Species</dd>

                        <dt class="col-sm-4">Raza:</dt>
                        <dd class="col-sm-8">@(Model.Breed ?? "No especificada")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Género:</dt>
                        <dd class="col-sm-8">@Model.GenderDisplay</dd>

                        <dt class="col-sm-4">Fecha Nacimiento:</dt>
                        <dd class="col-sm-8">@(Model.DateOfBirth?.ToString("dd/MM/yyyy") ?? "No especificada")</dd>

                        <dt class="col-sm-4">Edad:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-light text-dark">@Model.AgeDisplay</span>
                        </dd>

                        <dt class="col-sm-4">Peso:</dt>
                        <dd class="col-sm-8">@(Model.Weight?.ToString("0.0") ?? "N/A") kg</dd>

                        <dt class="col-sm-4">Color:</dt>
                        <dd class="col-sm-8">@(Model.Color ?? "No especificado")</dd>
                    </dl>
                </div>
            </div>

            @if (!exporting)
            {
                <div class="mt-4">
                    <h5 class="fw-semibold border-bottom pb-2 mb-3">Información Adicional</h5>
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-info-circle fs-4 me-3"></i>
                        <div>
                            <h6 class="alert-heading mb-1">Historial médico</h6>
                            <p class="mb-0">Para ver el historial médico completo, vacunas y otros registros.</p>
                            <a asp-controller="MedicalRecords" asp-action="Index" asp-route-petId="@Model.PetId" class="btn btn-link p-0">
                                Ver registros médicos <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i> ID: @Model.PetId | Registrado: @ViewBag.CreatedDate
                </small>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-list me-1"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
    }

    dt {
        color: #6c757d;
    }
</style>