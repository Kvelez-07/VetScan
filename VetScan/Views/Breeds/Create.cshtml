@using VetScan.ViewModels
@model BreedFormViewModel
@{
    ViewData["Title"] = "Nueva Raza";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0"><i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]</h2>
                        <a asp-action="Index" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <strong>Por favor corrija los siguientes errores:</strong>
                        </div>

                        <div class="mb-4">
                            <label asp-for="SpeciesId" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-tags text-primary"></i></span>
                                <select asp-for="SpeciesId" class="form-select" required>
                                    <option value="">-- Seleccione una especie --</option>
                                    @foreach (var species in ViewBag.Species)
                                    {
                                        <option value="@species.SpeciesId">@species.DisplayText</option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="SpeciesId" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="BreedName" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-tag text-primary"></i></span>
                                <input asp-for="BreedName" class="form-control" placeholder="Nombre de la raza" required />
                            </div>
                            <span asp-validation-for="BreedName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light align-items-start pt-2"><i class="bi bi-text-paragraph text-primary"></i></span>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Descripción (opcional)"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4 form-check form-switch">
                            <input type="checkbox" class="form-check-input" role="switch" id="IsActive" asp-for="IsActive" checked />
                            <label class="form-check-label fw-semibold" asp-for="IsActive"></label>
                            <small class="text-muted d-block mt-1">Desactive este interruptor para crear la raza como inactiva.</small>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Guardar Raza
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control, .form-select, .input-group-text {
        border-radius: 0.375rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

    .form-switch .form-check-input {
        width: 2.5em;
        height: 1.5em;
    }

    .card {
        border-radius: 0.5rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}