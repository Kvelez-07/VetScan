@using VetScan.ViewModels
@model VaccinationHistoryListViewModel
@{
    ViewData["Title"] = "Detalles de Vacunación";
    var exporting = Context.Request.Query["exporting"].FirstOrDefault() == "true";

    if (exporting)
    {
        Layout = null;
        <style>
            body {
                padding: 20px;
                background-color: white !important;
            }

            .no-export {
                display: none !important;
            }
        </style>
    }
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center @(exporting ? "no-export" : "")">
                <h2 class="h5 mb-0"><i class="bi bi-shield-plus me-2"></i>@ViewData["Title"]</h2>
                <div>
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download me-1"></i> Exportar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToPdf" asp-route-id="@Model.VaccinationId">
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.VaccinationId" asp-route-format="png">
                                    <i class="bi bi-file-image text-success me-2"></i> PNG
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.VaccinationId" asp-route-format="jpg">
                                    <i class="bi bi-file-image text-info me-2"></i> JPG
                                </a>
                            </li>
                        </ul>
                    </div>

                    <a asp-action="Edit" asp-route-id="@Model.VaccinationId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Mascota:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.PetName</dd>

                        <dt class="col-sm-4">Vacuna:</dt>
                        <dd class="col-sm-8">@Model.VaccineName</dd>

                        <dt class="col-sm-4">Tipo de Vacuna:</dt>
                        <dd class="col-sm-8">@ViewBag.VaccineType</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Veterinario:</dt>
                        <dd class="col-sm-8">@Model.VeterinarianName</dd>

                        <dt class="col-sm-4">Fecha de Vacunación:</dt>
                        <dd class="col-sm-8">@Model.VaccinationDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Fabricante:</dt>
                        <dd class="col-sm-8">@ViewBag.VaccineManufacturer</dd>
                    </dl>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Número de Lote:</dt>
                        <dd class="col-sm-8">@(Model.BatchNumber ?? "N/A")</dd>

                        <dt class="col-sm-4">Fecha de Expiración:</dt>
                        <dd class="col-sm-8">@(ViewBag.ExpirationDate ?? "N/A")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Próxima Dosis:</dt>
                        <dd class="col-sm-8">@(Model.NextDueDate?.ToString("dd/MM/yyyy") ?? "N/A")</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8"><span class="badge @Model.NextDueStatusClass">@Model.NextDueStatusText</span></dd>
                    </dl>
                </div>
            </div>

            <div class="mb-4">
                <h5 class="fw-semibold border-bottom pb-2 mb-3">Reacciones</h5>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(ViewBag.Reactions))
                        {
                            <p class="card-text">@ViewBag.Reactions</p>
                        }
                        else
                        {
                            <p class="text-muted">Ninguna reacción registrada</p>
                        }
                    </div>
                </div>
            </div>

            @if (!exporting)
            {
                <div class="mt-4">
                    <h5 class="fw-semibold border-bottom pb-2 mb-3">Información Adicional</h5>
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-info-circle fs-4 me-3"></i>
                        <div>
                            <h6 class="alert-heading mb-1">Historial de vacunación</h6>
                            <p class="mb-0">Para ver el historial completo de vacunación de esta mascota.</p>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i> ID: @Model.VaccinationId | Registrado: @Model.VaccinationDate.ToString("dd/MM/yyyy")
                </small>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-list me-1"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
    }

    dt {
        color: #6c757d;
    }

    .badge {
        padding: 0.35em 0.65em;
        font-weight: 500;
    }

    .status-current {
        background-color: #198754;
    }

    .status-upcoming {
        background-color: #ffc107;
        color: #212529;
    }

    .status-overdue {
        background-color: #dc3545;
    }
</style>