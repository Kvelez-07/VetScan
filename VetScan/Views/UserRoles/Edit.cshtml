@using VetScan.ViewModels
@model UserRoleFormViewModel
@{
    ViewData["Title"] = "Editar Rol";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h2>
                        <a asp-action="Index" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" class="needs-validation" novalidate method="post">
                        <input type="hidden" asp-for="RoleId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <strong>Por favor corrija los siguientes errores:</strong>
                        </div>

                        <div class="mb-4">
                            <label asp-for="RoleName" class="form-label fw-semibold">Nombre del Rol</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-shield-lock text-primary"></i></span>
                                <input asp-for="RoleName" class="form-control" required />
                            </div>
                            <span asp-validation-for="RoleName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">Descripción</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light align-items-start"><i class="bi bi-card-text text-primary mt-2"></i></span>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4 form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" asp-for="IsActive">
                            <label class="form-check-label fw-semibold" for="flexSwitchCheckChecked">Activo</label>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control, .form-select, .input-group-text {
        border-radius: 0.375rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

    .card {
        border-radius: 0.5rem;
    }

    textarea {
        min-height: 100px;
    }

    .form-switch .form-check-input {
        width: 3em;
        height: 1.5em;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}