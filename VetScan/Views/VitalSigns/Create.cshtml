@model VetScan.ViewModels.VitalSignFormViewModel
@{
    ViewData["Title"] = Model.VitalSignId == 0 ? "Nuevo Registro" : "Editar Registro";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">@ViewData["Title"] de Signos Vitales</h2>
                </div>
                <div class="card-body">
                    <form asp-action="@(Model.VitalSignId == 0 ? "Create" : "Edit")">
                        <input type="hidden" asp-for="VitalSignId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ConsultationId" class="form-label"></label>
                            <select asp-for="ConsultationId" class="form-select" required>
                                <option value="">-- Seleccione una consulta --</option>
                                @foreach (var consultation in ViewBag.Consultations)
                                {
                                    <option value="@consultation.ConsultationId">@consultation.DisplayText</option>
                                }
                            </select>
                            <span asp-validation-for="ConsultationId" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Temperature" class="form-label"></label>
                                <input asp-for="Temperature" type="number" step="0.1" class="form-control" />
                                <span asp-validation-for="Temperature" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="HeartRate" class="form-label"></label>
                                <input asp-for="HeartRate" type="number" class="form-control" />
                                <span asp-validation-for="HeartRate" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="RespiratoryRate" class="form-label"></label>
                                <input asp-for="RespiratoryRate" type="number" class="form-control" />
                                <span asp-validation-for="RespiratoryRate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="Weight" class="form-label"></label>
                                <input asp-for="Weight" type="number" step="0.1" class="form-control" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="BloodPressureSystolic" class="form-label"></label>
                                <input asp-for="BloodPressureSystolic" type="number" class="form-control" />
                                <span asp-validation-for="BloodPressureSystolic" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="BloodPressureDiastolic" class="form-label"></label>
                                <input asp-for="BloodPressureDiastolic" type="number" class="form-control" />
                                <span asp-validation-for="BloodPressureDiastolic" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RecordedDate" class="form-label"></label>
                            <input asp-for="RecordedDate" type="datetime-local" class="form-control" />
                            <span asp-validation-for="RecordedDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}