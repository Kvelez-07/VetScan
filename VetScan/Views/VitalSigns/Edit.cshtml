@using VetScan.ViewModels
@model VitalSignFormViewModel
@{
    ViewData["Title"] = "Editar Registro de Signos Vitales";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h2>
                        <a asp-action="Index" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" class="needs-validation" novalidate method="post">
                        <input type="hidden" asp-for="VitalSignId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <strong>Por favor corrija los siguientes errores:</strong>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConsultationId" class="form-label fw-semibold">Consulta</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-calendar-heart text-primary"></i></span>
                                <select asp-for="ConsultationId" class="form-select" required>
                                    <option value="">-- Seleccione una consulta --</option>
                                    @foreach (var consultation in ViewBag.Consultations)
                                    {
                                        <option value="@consultation.ConsultationId">@consultation.DisplayText</option>
                                    }
                                </select>
                            </div>
                            <span asp-validation-for="ConsultationId" class="text-danger small"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label asp-for="Temperature" class="form-label fw-semibold">Temperatura (°C)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-thermometer-half text-primary"></i></span>
                                    <input asp-for="Temperature" type="number" step="0.1" class="form-control" />
                                </div>
                                <span asp-validation-for="Temperature" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="HeartRate" class="form-label fw-semibold">Frec. Cardíaca (lpm)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-heart-pulse text-primary"></i></span>
                                    <input asp-for="HeartRate" type="number" class="form-control" />
                                </div>
                                <span asp-validation-for="HeartRate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="RespiratoryRate" class="form-label fw-semibold">Frec. Respiratoria (rpm)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-lungs text-primary"></i></span>
                                    <input asp-for="RespiratoryRate" type="number" class="form-control" />
                                </div>
                                <span asp-validation-for="RespiratoryRate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label asp-for="Weight" class="form-label fw-semibold">Peso (kg)</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-speedometer2 text-primary"></i></span>
                                    <input asp-for="Weight" type="number" step="0.1" class="form-control" />
                                </div>
                                <span asp-validation-for="Weight" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="BloodPressureSystolic" class="form-label fw-semibold">Presión Sistólica</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-heart text-primary"></i></span>
                                    <input asp-for="BloodPressureSystolic" type="number" class="form-control" />
                                </div>
                                <span asp-validation-for="BloodPressureSystolic" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="BloodPressureDiastolic" class="form-label fw-semibold">Presión Diastólica</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-heart text-primary"></i></span>
                                    <input asp-for="BloodPressureDiastolic" type="number" class="form-control" />
                                </div>
                                <span asp-validation-for="BloodPressureDiastolic" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="RecordedDate" class="form-label fw-semibold">Fecha y Hora</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-calendar-date text-primary"></i></span>
                                <input asp-for="RecordedDate" type="datetime-local" class="form-control" />
                            </div>
                            <span asp-validation-for="RecordedDate" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label fw-semibold">Notas</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control, .form-select, .input-group-text {
        border-radius: 0.375rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

    .card {
        border-radius: 0.5rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}