@using VetScan.ViewModels
@model VitalSignListViewModel
@{
    ViewData["Title"] = "Detalles de Signos Vitales";
    var exporting = Context.Request.Query["exporting"].FirstOrDefault() == "true";

    if (exporting)
    {
        Layout = null;
        <style>
            body {
                padding: 20px;
                background-color: white !important;
            }

            .no-export {
                display: none !important;
            }
        </style>
    }
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center @(exporting ? "no-export" : "")">
                <h2 class="h5 mb-0"><i class="bi bi-heart-pulse me-2"></i>Registro del @Model.FormattedDate</h2>
                <div>
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download me-1"></i> Exportar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToPdf" asp-route-id="@Model.VitalSignId">
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.VitalSignId" asp-route-format="png">
                                    <i class="bi bi-file-image text-success me-2"></i> PNG
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.VitalSignId" asp-route-format="jpg">
                                    <i class="bi bi-file-image text-info me-2"></i> JPG
                                </a>
                            </li>
                        </ul>
                    </div>

                    <a asp-action="Edit" asp-route-id="@Model.VitalSignId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Fecha:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.FormattedDate</dd>

                        <dt class="col-sm-4">Mascota:</dt>
                        <dd class="col-sm-8">@Model.PetName</dd>

                        <dt class="col-sm-4">Consulta:</dt>
                        <dd class="col-sm-8">@Model.ConsultationInfo</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Temperatura:</dt>
                        <dd class="col-sm-8"><span class="badge bg-light text-dark">@Model.FormattedTemperature</span></dd>

                        <dt class="col-sm-4">Frec. Cardíaca:</dt>
                        <dd class="col-sm-8"><span class="badge bg-light text-dark">@Model.FormattedHeartRate</span></dd>

                        <dt class="col-sm-4">Frec. Respiratoria:</dt>
                        <dd class="col-sm-8"><span class="badge bg-light text-dark">@Model.FormattedRespiratoryRate</span></dd>

                        <dt class="col-sm-4">Peso:</dt>
                        <dd class="col-sm-8"><span class="badge bg-light text-dark">@Model.FormattedWeight</span></dd>

                        <dt class="col-sm-4">Presión:</dt>
                        <dd class="col-sm-8">@Model.BloodPressure</dd>
                    </dl>
                </div>
            </div>

            <div class="mb-4">
                <h5 class="fw-semibold border-bottom pb-2 mb-3">Notas Adicionales</h5>
                <div class="card bg-light">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(ViewBag.Notes))
                        {
                            <p class="card-text">@ViewBag.Notes</p>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No hay notas adicionales</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i> ID: @Model.VitalSignId | Registrado: @Model.FormattedDate
                </small>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-list me-1"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
    }

    dt {
        color: #6c757d;
    }

    .badge.bg-light {
        background-color: #f8f9fa !important;
    }
</style>