@model VetScan.ViewModels.SpecialtyListViewModel
@{
    ViewData["Title"] = "Detalles de Especialidad";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">@Model.SpecialtyName</h2>
                <div>
                    <a asp-action="ExportDetailsToPdf" asp-route-id="@Model.SpecialtyId" class="btn btn-sm btn-danger me-2">
                        <i class="bi bi-file-earmark-pdf"></i> Exportar
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.SpecialtyId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">@Model.SpecialtyName</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9"><span class="@Model.StatusClass">@Model.StatusText</span></dd>

                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">@(Model.Description ?? "No disponible")</dd>

                <dt class="col-sm-3">Veterinarios asociados:</dt>
                <dd class="col-sm-9">@Model.VeterinarianCount</dd>
            </dl>

            @if (ViewBag.Veterinarians != null && ((List<string>)ViewBag.Veterinarians).Count > 0)
            {
                <div class="mt-4">
                    <h5>Lista de Veterinarios:</h5>
                    <ul>
                        @foreach (var vet in ViewBag.Veterinarians)
                        {
                            <li>@vet</li>
                        }
                    </ul>
                </div>
            }
        </div>

        <div class="card-footer">
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-list"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>