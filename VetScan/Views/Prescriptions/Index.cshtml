@model IEnumerable<VetScan.ViewModels.PrescriptionListViewModel>
@{
    ViewData["Title"] = "Prescripciones";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@ViewData["Title"]</h1>
        <div>
            <a asp-action="ExportToPdf" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-danger me-2">
                <i class="bi bi-file-earmark-pdf"></i> Exportar a PDF
            </a>
            <a asp-action="ExportToExcel" asp-route-searchString="@ViewData["CurrentFilter"]" class="btn btn-success me-2">
                <i class="bi bi-file-earmark-excel"></i> Exportar a Excel
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nueva Prescripción
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-2">
                <div class="col-md-8">
                    <input type="text" class="form-control" name="searchString"
                           value="@ViewData["CurrentFilter"]" placeholder="Buscar por mascota o medicamento...">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-x-circle"></i> Limpiar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Fecha</th>
                            <th>Mascota</th>
                            <th>Consulta</th>
                            <th>Medicamento</th>
                            <th>Dosis</th>
                            <th>Frecuencia</th>
                            <th>Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FormattedDate</td>
                                    <td>@item.PetName</td>
                                    <td>@item.ConsultationInfo</td>
                                    <td>@item.MedicationName</td>
                                    <td>@item.Dosage</td>
                                    <td>@item.Frequency</td>
                                    <td><span class="@item.StatusClass">@item.Status</span></td>
                                    <td class="text-end">
                                        <div class="d-flex gap-1 justify-content-end">
                                            <a asp-action="Details" asp-route-id="@item.PrescriptionId"
                                               class="btn btn-sm btn-outline-primary" title="Detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.PrescriptionId"
                                               class="btn btn-sm btn-outline-warning" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.PrescriptionId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        title="Eliminar"
                                                        onclick="return confirm('¿Eliminar esta prescripción?')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">No se encontraron prescripciones</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>