@using VetScan.ViewModels
@model PrescriptionFormViewModel
@{
    ViewData["Title"] = "Nueva Prescripción";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0"><i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]</h2>
                        <a asp-action="Index" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <strong>Por favor corrija los siguientes errores:</strong>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="ConsultationId" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-clipboard-pulse text-primary"></i></span>
                                    <select asp-for="ConsultationId" class="form-select" required>
                                        <option value="">-- Seleccione una consulta --</option>
                                        @foreach (var consultation in ViewBag.Consultations)
                                        {
                                            <option value="@consultation.ConsultationId">@consultation.DisplayText</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="ConsultationId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="MedicationId" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-capsule text-primary"></i></span>
                                    <select asp-for="MedicationId" class="form-select" required>
                                        <option value="">-- Seleccione un medicamento --</option>
                                        @foreach (var medication in ViewBag.Medications)
                                        {
                                            <option value="@medication.MedicationId">@medication.DisplayText</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="MedicationId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Dosage" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-droplet text-primary"></i></span>
                                    <input asp-for="Dosage" class="form-control" required />
                                </div>
                                <span asp-validation-for="Dosage" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Frequency" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-clock text-primary"></i></span>
                                    <input asp-for="Frequency" class="form-control" required />
                                </div>
                                <span asp-validation-for="Frequency" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="Duration" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-calendar-range text-primary"></i></span>
                                    <input asp-for="Duration" class="form-control" />
                                </div>
                                <span asp-validation-for="Duration" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-clipboard-check text-primary"></i></span>
                                    <select asp-for="Status" class="form-select" required>
                                        @foreach (var status in ViewBag.StatusOptions)
                                        {
                                            <option value="@status">@status</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-4">
                                <label asp-for="Quantity" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-123 text-primary"></i></span>
                                    <input asp-for="Quantity" type="number" class="form-control" />
                                </div>
                                <span asp-validation-for="Quantity" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Refills" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-arrow-repeat text-primary"></i></span>
                                    <input asp-for="Refills" type="number" class="form-control" />
                                </div>
                                <span asp-validation-for="Refills" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="StartDate" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-calendar text-primary"></i></span>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                </div>
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Instructions" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light align-items-start pt-2"><i class="bi bi-journal-text text-primary"></i></span>
                                <textarea asp-for="Instructions" class="form-control" rows="4" placeholder="Instrucciones adicionales..."></textarea>
                            </div>
                            <span asp-validation-for="Instructions" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Guardar Prescripción
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control, .form-select, .input-group-text {
        border-radius: 0.375rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

    .card {
        border-radius: 0.5rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}