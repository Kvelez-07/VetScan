@using VetScan.ViewModels
@model PrescriptionListViewModel
@{
    ViewData["Title"] = "Detalles de Prescripción";
    var exporting = Context.Request.Query["exporting"].FirstOrDefault() == "true";

    if (exporting)
    {
        Layout = null;
        <style>
            body {
                padding: 20px;
                background-color: white !important;
            }

            .no-export {
                display: none !important;
            }
        </style>
    }
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center @(exporting ? "no-export" : "")">
                <h2 class="h5 mb-0"><i class="bi bi-prescription me-2"></i>Prescripción del @Model.FormattedDate</h2>
                <div>
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download me-1"></i> Exportar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToPdf" asp-route-id="@Model.PrescriptionId">
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.PrescriptionId" asp-route-format="png">
                                    <i class="bi bi-file-image text-success me-2"></i> PNG
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.PrescriptionId" asp-route-format="jpg">
                                    <i class="bi bi-file-image text-info me-2"></i> JPG
                                </a>
                            </li>
                        </ul>
                    </div>

                    <a asp-action="Edit" asp-route-id="@Model.PrescriptionId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Fecha:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.FormattedDate</dd>

                        <dt class="col-sm-4">Mascota:</dt>
                        <dd class="col-sm-8">@Model.PetName</dd>

                        <dt class="col-sm-4">Consulta:</dt>
                        <dd class="col-sm-8">@Model.ConsultationInfo</dd>

                        <dt class="col-sm-4">Medicamento:</dt>
                        <dd class="col-sm-8">@Model.MedicationName</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Dosis:</dt>
                        <dd class="col-sm-8">@Model.Dosage</dd>

                        <dt class="col-sm-4">Frecuencia:</dt>
                        <dd class="col-sm-8">@Model.Frequency</dd>

                        <dt class="col-sm-4">Duración:</dt>
                        <dd class="col-sm-8">@(ViewBag.Duration ?? "N/A")</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            <span class="@Model.StatusClass">@Model.Status</span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Cantidad:</dt>
                        <dd class="col-sm-8">@(ViewBag.Quantity ?? "N/A")</dd>

                        <dt class="col-sm-4">Reabastecimientos:</dt>
                        <dd class="col-sm-8">@(ViewBag.Refills ?? "0")</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Fecha de Inicio:</dt>
                        <dd class="col-sm-8">@(ViewBag.StartDate ?? "N/A")</dd>

                        <dt class="col-sm-4">Fecha de Fin:</dt>
                        <dd class="col-sm-8">@(ViewBag.EndDate ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <div class="mb-4">
                <h5 class="fw-semibold border-bottom pb-2 mb-3">Instrucciones</h5>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(ViewBag.Instructions))
                        {
                            <p class="card-text">@ViewBag.Instructions</p>
                        }
                        else
                        {
                            <p class="text-muted">No hay instrucciones adicionales</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i> ID: @Model.PrescriptionId | Creado: @Model.FormattedDate
                </small>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-list me-1"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .status-active {
        color: #fff;
        background-color: #28a745;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-completed {
        color: #fff;
        background-color: #0d6efd;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-cancelled {
        color: #fff;
        background-color: #dc3545;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-pending {
        color: #fff;
        background-color: #ffc107;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .card {
        border-radius: 0.5rem;
    }

    dt {
        color: #6c757d;
    }
</style>