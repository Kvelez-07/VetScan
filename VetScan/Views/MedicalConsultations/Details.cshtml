@using VetScan.ViewModels
@model MedicalConsultationListViewModel
@{
    ViewData["Title"] = "Detalles de Consulta Médica";
    var exporting = Context.Request.Query["exporting"].FirstOrDefault() == "true";

    if (exporting)
    {
        Layout = null;
        <style>
            body {
                padding: 20px;
                background-color: white !important;
            }

            .no-export {
                display: none !important;
            }
        </style>
    }
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center @(exporting ? "no-export" : "")">
                <h2 class="h5 mb-0"><i class="bi bi-clipboard-pulse me-2"></i>@ViewData["Title"]</h2>
                <div>
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download me-1"></i> Exportar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToPdf" asp-route-id="@Model.ConsultationId">
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.ConsultationId" asp-route-format="png">
                                    <i class="bi bi-file-image text-success me-2"></i> PNG
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.ConsultationId" asp-route-format="jpg">
                                    <i class="bi bi-file-image text-info me-2"></i> JPG
                                </a>
                            </li>
                        </ul>
                    </div>

                    <a asp-action="Edit" asp-route-id="@Model.ConsultationId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Fecha:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.FormattedDate</dd>

                        <dt class="col-sm-4">Tipo:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.ConsultationType</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            <span class="@Model.StatusClass">@Model.Status</span>
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Mascota:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.PetName</dd>

                        <dt class="col-sm-4">Registro:</dt>
                        <dd class="col-sm-8">@Model.RecordNumber</dd>

                        <dt class="col-sm-4">Veterinario:</dt>
                        <dd class="col-sm-8">@Model.VeterinarianName</dd>
                    </dl>
                </div>
            </div>

            <div class="mb-4">
                <h5 class="fw-semibold border-bottom pb-2 mb-3">Diagnóstico</h5>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(ViewBag.Diagnosis))
                        {
                            <p class="card-text">@ViewBag.Diagnosis</p>
                        }
                        else
                        {
                            <p class="text-muted">No hay diagnóstico registrado</p>
                        }
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <h5 class="fw-semibold border-bottom pb-2 mb-3">Tratamiento</h5>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(ViewBag.Treatment))
                        {
                            <p class="card-text">@ViewBag.Treatment</p>
                        }
                        else
                        {
                            <p class="text-muted">No hay tratamiento registrado</p>
                        }
                    </div>
                </div>
            </div>

            @if (ViewBag.NextAppointment != null)
            {
                <div class="alert alert-info d-flex align-items-center">
                    <i class="bi bi-calendar-check fs-4 me-3"></i>
                    <div>
                        <h6 class="alert-heading mb-1">Próxima cita recomendada</h6>
                        <p class="mb-0">@(((DateTime)ViewBag.NextAppointment).ToString("dd/MM/yyyy"))</p>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i> ID: @Model.ConsultationId | Creado: @Model.FormattedDate
                </small>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-list me-1"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .status-completed {
        color: #fff;
        background-color: #28a745;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-pending {
        color: #fff;
        background-color: #ffc107;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-cancelled {
        color: #fff;
        background-color: #dc3545;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .card {
        border-radius: 0.5rem;
    }

    dt {
        color: #6c757d;
    }
</style>