@using VetScan.ViewModels
@model MedicalConsultationFormViewModel
@{
    ViewData["Title"] = "Editar Consulta Médica";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h2>
                        <a asp-action="Index" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="ConsultationId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <strong>Por favor corrija los siguientes errores:</strong>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Registro Médico</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-file-medical text-primary"></i></span>
                                    <input class="form-control" value="@ViewBag.RecordNumber" disabled />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Veterinario</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-person-badge text-primary"></i></span>
                                    <input class="form-control" value="@ViewBag.VeterinarianName" disabled />
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="ConsultationDate" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-calendar-date text-primary"></i></span>
                                    <input asp-for="ConsultationDate" type="datetime-local" class="form-control" required />
                                </div>
                                <span asp-validation-for="ConsultationDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConsultationType" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-clipboard-pulse text-primary"></i></span>
                                    <select asp-for="ConsultationType" class="form-select" required>
                                        @foreach (var type in ViewBag.ConsultationTypes)
                                        {
                                            <option value="@type">@type</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="ConsultationType" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Diagnosis" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light align-items-start pt-2"><i class="bi bi-clipboard2-pulse text-primary"></i></span>
                                <textarea asp-for="Diagnosis" class="form-control" rows="4" placeholder="Diagnóstico..."></textarea>
                            </div>
                            <span asp-validation-for="Diagnosis" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Treatment" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light align-items-start pt-2"><i class="bi bi-capsule-pill text-primary"></i></span>
                                <textarea asp-for="Treatment" class="form-control" rows="4" placeholder="Tratamiento..."></textarea>
                            </div>
                            <span asp-validation-for="Treatment" class="text-danger small"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="NextAppointmentRecommended" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-calendar-check text-primary"></i></span>
                                    <input asp-for="NextAppointmentRecommended" type="date" class="form-control" />
                                </div>
                                <span asp-validation-for="NextAppointmentRecommended" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-clipboard-check text-primary"></i></span>
                                    <select asp-for="Status" class="form-select" required>
                                        @foreach (var status in ViewBag.StatusOptions)
                                        {
                                            <option value="@status">@status</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control, .form-select, .input-group-text {
        border-radius: 0.375rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

    .card {
        border-radius: 0.5rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}