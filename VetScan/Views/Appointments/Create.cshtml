@using VetScan.ViewModels
@model AppointmentFormViewModel
@{
    ViewData["Title"] = "Nueva Cita";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0"><i class="bi bi-plus-circle me-2"></i>@ViewData["Title"]</h2>
                        <a asp-action="Index" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4">
                            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            <strong>Por favor corrija los siguientes errores:</strong>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="PetId" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-heart text-primary"></i></span>
                                    <select asp-for="PetId" class="form-select" required>
                                        <option value="">-- Seleccione una mascota --</option>
                                        @foreach (var pet in ViewBag.Pets)
                                        {
                                            <option value="@pet.PetId">@pet.DisplayText</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="PetId" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="VeterinarianId" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-person-badge text-primary"></i></span>
                                    <select asp-for="VeterinarianId" class="form-select" required>
                                        <option value="">-- Seleccione un veterinario --</option>
                                        @foreach (var vet in ViewBag.Veterinarians)
                                        {
                                            <option value="@vet.VeterinarianId">@vet.DisplayText</option>
                                        }
                                    </select>
                                </div>
                                <span asp-validation-for="VeterinarianId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="AppointmentDate" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-calendar-date text-primary"></i></span>
                                    <input asp-for="AppointmentDate" type="datetime-local" class="form-control" required />
                                </div>
                                <span asp-validation-for="AppointmentDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Duration" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-clock text-primary"></i></span>
                                    <input asp-for="Duration" class="form-control" required />
                                </div>
                                <span asp-validation-for="Duration" class="text-danger small"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="AppointmentType" class="form-label fw-semibold"></label>
                                <select asp-for="AppointmentType" class="form-select" required>
                                    @foreach (var type in ViewBag.AppointmentTypes)
                                    {
                                        <option value="@type">@type</option>
                                    }
                                </select>
                                <span asp-validation-for="AppointmentType" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="ReasonForVisit" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-clipboard-plus text-primary"></i></span>
                                    <input asp-for="ReasonForVisit" class="form-control" />
                                </div>
                                <span asp-validation-for="ReasonForVisit" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label fw-semibold"></label>
                                <select asp-for="Status" class="form-select" required>
                                    @foreach (var status in ViewBag.StatusOptions)
                                    {
                                        <option value="@status">@status</option>
                                    }
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="EstimatedCost" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-cash-coin text-primary"></i></span>
                                    <input asp-for="EstimatedCost" class="form-control" />
                                </div>
                                <span asp-validation-for="EstimatedCost" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ActualCost" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-currency-dollar text-primary"></i></span>
                                    <input asp-for="ActualCost" class="form-control" />
                                </div>
                                <span asp-validation-for="ActualCost" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light align-items-start pt-2"><i class="bi bi-card-text text-primary"></i></span>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Notas adicionales..."></textarea>
                            </div>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i> Crear Cita
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .form-control, .form-select, .input-group-text {
        border-radius: 0.375rem;
    }

        .form-control:focus, .form-select:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
        }

    .card {
        border-radius: 0.5rem;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}