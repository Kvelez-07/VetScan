@using VetScan.ViewModels
@model AppointmentFormViewModel
@{
    ViewData["Title"] = "Nueva Cita";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="PetId" class="form-label"></label>
                                <select asp-for="PetId" class="form-select" required>
                                    <option value="">-- Seleccione una mascota --</option>
                                    @foreach (var pet in ViewBag.Pets)
                                    {
                                        <option value="@pet.PetId">@pet.DisplayText</option>
                                    }
                                </select>
                                <span asp-validation-for="PetId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="VeterinarianId" class="form-label"></label>
                                <select asp-for="VeterinarianId" class="form-select" required>
                                    <option value="">-- Seleccione un veterinario --</option>
                                    @foreach (var vet in ViewBag.Veterinarians)
                                    {
                                        <option value="@vet.VeterinarianId">@vet.DisplayText</option>
                                    }
                                </select>
                                <span asp-validation-for="VeterinarianId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="AppointmentDate" class="form-label"></label>
                                <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Duration" class="form-label"></label>
                                <input asp-for="Duration" class="form-control" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="AppointmentType" class="form-label"></label>
                                <select asp-for="AppointmentType" class="form-select">
                                    @foreach (var type in ViewBag.AppointmentTypes)
                                    {
                                        <option value="@type">@type</option>
                                    }
                                </select>
                                <span asp-validation-for="AppointmentType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ReasonForVisit" class="form-label"></label>
                                <input asp-for="ReasonForVisit" class="form-control" />
                                <span asp-validation-for="ReasonForVisit" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" class="form-select">
                                    @foreach (var status in ViewBag.StatusOptions)
                                    {
                                        <option value="@status">@status</option>
                                    }
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="EstimatedCost" class="form-label"></label>
                                <input asp-for="EstimatedCost" class="form-control" />
                                <span asp-validation-for="EstimatedCost" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ActualCost" class="form-label"></label>
                                <input asp-for="ActualCost" class="form-control" />
                                <span asp-validation-for="ActualCost" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}