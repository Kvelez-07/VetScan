@using VetScan.ViewModels
@model AppointmentListViewModel
@{
    ViewData["Title"] = "Detalles de la Cita";
    var exporting = Context.Request.Query["exporting"].FirstOrDefault() == "true";

    if (exporting)
    {
        Layout = null;
        <style>
            body {
                padding: 20px;
                background-color: white !important;
            }

            .no-export {
                display: none !important;
            }
        </style>
    }
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center @(exporting ? "no-export" : "")">
                <h2 class="h5 mb-0"><i class="bi bi-calendar-event me-2"></i>@ViewData["Title"]</h2>
                <div>
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download me-1"></i> Exportar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToPdf" asp-route-id="@Model.AppointmentId">
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.AppointmentId" asp-route-format="png">
                                    <i class="bi bi-file-image text-success me-2"></i> PNG
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.AppointmentId" asp-route-format="jpg">
                                    <i class="bi bi-file-image text-info me-2"></i> JPG
                                </a>
                            </li>
                        </ul>
                    </div>

                    <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Mascota:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.PetName</dd>

                        <dt class="col-sm-4">Veterinario:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.VeterinarianName</dd>

                        <dt class="col-sm-4">Fecha y Hora:</dt>
                        <dd class="col-sm-8">@Model.FormattedDate</dd>

                        <dt class="col-sm-4">Duración:</dt>
                        <dd class="col-sm-8">@ViewBag.Duration minutos</dd>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Tipo:</dt>
                        <dd class="col-sm-8">@Model.AppointmentType</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8"><span class="@Model.StatusClass">@Model.Status</span></dd>

                        <dt class="col-sm-4">Costo Estimado:</dt>
                        <dd class="col-sm-8">@ViewBag.EstimatedCost</dd>

                        <dt class="col-sm-4">Costo Real:</dt>
                        <dd class="col-sm-8">@ViewBag.ActualCost</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                <h5 class="fw-semibold border-bottom pb-2 mb-3">Información Adicional</h5>
                <div class="card mb-3 border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title fw-semibold text-primary"><i class="bi bi-clipboard-pulse me-2"></i>Razón de la Visita</h6>
                        <p class="card-text mt-3">@(ViewBag.ReasonForVisit ?? "No especificada")</p>
                    </div>
                </div>

                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="card-title fw-semibold text-primary"><i class="bi bi-journal-text me-2"></i>Notas</h6>
                        <p class="card-text mt-3">@(ViewBag.Notes ?? "No hay notas adicionales")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i> ID: @Model.AppointmentId | Creado: @DateTime.Now.ToString("dd/MM/yyyy")
                </small>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-list me-1"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .status-scheduled {
        color: #fff;
        background-color: #0d6efd;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-completed {
        color: #fff;
        background-color: #28a745;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-cancelled {
        color: #fff;
        background-color: #dc3545;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .card {
        border-radius: 0.5rem;
    }

    dt {
        color: #6c757d;
    }
</style>