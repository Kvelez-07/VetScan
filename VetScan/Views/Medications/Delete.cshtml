@model VetScan.Models.Medication
@{
    ViewData["Title"] = "Eliminar Medicamento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0"><i class="bi bi-exclamation-triangle me-2"></i>@ViewData["Title"]</h2>
                        <a asp-action="Index" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-danger d-flex align-items-center mb-4">
                        <i class="bi bi-exclamation-octagon-fill fs-4 me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-2">¡Advertencia importante!</h5>
                            <p class="mb-0">Esta acción eliminará permanentemente este medicamento y no se puede deshacer.</p>
                        </div>
                    </div>

                    <h5 class="fw-semibold text-primary border-bottom pb-2 mb-3">Detalles del Medicamento</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Nombre Comercial:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.MedicationName</dd>

                        <dt class="col-sm-4">Nombre Genérico:</dt>
                        <dd class="col-sm-8">@(Model.GenericName ?? "N/A")</dd>

                        <dt class="col-sm-4">Fabricante:</dt>
                        <dd class="col-sm-8">@(Model.Manufacturer ?? "N/A")</dd>

                        <dt class="col-sm-4">Concentración:</dt>
                        <dd class="col-sm-8">@(Model.Concentration ?? "N/A")</dd>

                        <dt class="col-sm-4">Categoría:</dt>
                        <dd class="col-sm-8">@(Model.Category ?? "N/A")</dd>
                    </dl>

                    <div class="alert alert-warning mt-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Confirmación requerida:</strong> ¿Estás seguro que deseas eliminar este medicamento?
                    </div>
                </div>

                <div class="card-footer bg-light">
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="MedicationId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
    }

    .alert-danger {
        border-left: 4px solid #dc3545;
    }

    .alert-warning {
        border-left: 4px solid #ffc107;
    }

    dt {
        color: #6c757d;
    }
</style>