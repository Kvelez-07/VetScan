@using VetScan.ViewModels
@model MedicationListViewModel
@{
    ViewData["Title"] = "Detalles del Medicamento";
    var exporting = Context.Request.Query["exporting"].FirstOrDefault() == "true";

    if (exporting)
    {
        Layout = null;
        <style>
            body {
                padding: 20px;
                background-color: white !important;
            }

            .no-export {
                display: none !important;
            }
        </style>
    }
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center @(exporting ? "no-export" : "")">
                <h2 class="h5 mb-0"><i class="bi bi-capsule me-2"></i>@Model.MedicationName</h2>
                <div>
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download me-1"></i> Exportar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToPdf" asp-route-id="@Model.MedicationId">
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.MedicationId" asp-route-format="png">
                                    <i class="bi bi-file-image text-success me-2"></i> PNG
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.MedicationId" asp-route-format="jpg">
                                    <i class="bi bi-file-image text-info me-2"></i> JPG
                                </a>
                            </li>
                        </ul>
                    </div>

                    <a asp-action="Edit" asp-route-id="@Model.MedicationId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre Comercial:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.MedicationName</dd>

                        <dt class="col-sm-4">Nombre Genérico:</dt>
                        <dd class="col-sm-8">@(Model.GenericName ?? "N/A")</dd>

                        <dt class="col-sm-4">Fabricante:</dt>
                        <dd class="col-sm-8">@(Model.Manufacturer ?? "N/A")</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Concentración:</dt>
                        <dd class="col-sm-8">@(Model.Concentration ?? "N/A")</dd>

                        <dt class="col-sm-4">Categoría:</dt>
                        <dd class="col-sm-8">@(Model.Category ?? "N/A")</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            <span class="@(ViewBag.IsActive == "Activo" ? "status-active" : "status-inactive")">
                                @ViewBag.IsActive
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <dl class="row">
                        <dt class="col-sm-2">Fecha de Creación:</dt>
                        <dd class="col-sm-10">@ViewBag.CreatedDate</dd>
                    </dl>
                </div>
            </div>

            @if (!exporting)
            {
                <div class="mt-4">
                    <h5 class="fw-semibold border-bottom pb-2 mb-3">Prescripciones Relacionadas</h5>
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-info-circle fs-4 me-3"></i>
                        <div>
                            <h6 class="alert-heading mb-1">Uso en prescripciones</h6>
                            <p class="mb-0">Este medicamento aparece en las siguientes prescripciones.</p>
                            <a asp-controller="Prescriptions" asp-action="Index" asp-route-medicationId="@Model.MedicationId" class="btn btn-link p-0">
                                Ver todas las prescripciones <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i> ID: @Model.MedicationId | Creado: @ViewBag.CreatedDate
                </small>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-list me-1"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .status-active {
        color: #fff;
        background-color: #28a745;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-inactive {
        color: #fff;
        background-color: #6c757d;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .card {
        border-radius: 0.5rem;
    }

    dt {
        color: #6c757d;
    }
</style>