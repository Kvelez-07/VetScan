@using VetScan.ViewModels
@model MedicalRecordListViewModel
@{
    // Verificar si estamos en modo exportación
    var exporting = Context.Request.Query["exporting"].FirstOrDefault() == "true";

    if (exporting)
    {
        Layout = null;
        <style>
            body {
                padding: 20px;
                background-color: white !important;
            }

            .no-export {
                display: none !important;
            }
        </style>
    }
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center @(exporting ? "no-export" : "")">
                <h2 class="h5 mb-0"><i class="bi bi-file-medical me-2"></i>Registro: @Model.RecordNumber</h2>
                <div>
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-download me-1"></i> Exportar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToPdf" asp-route-id="@Model.MedicalRecordId">
                                    <i class="bi bi-file-earmark-pdf text-danger me-2"></i> PDF
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.MedicalRecordId" asp-route-format="png">
                                    <i class="bi bi-file-image text-success me-2"></i> PNG
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="ExportDetailsToImage" asp-route-id="@Model.MedicalRecordId" asp-route-format="jpg">
                                    <i class="bi bi-file-image text-info me-2"></i> JPG
                                </a>
                            </li>
                        </ul>
                    </div>

                    <a asp-action="Edit" asp-route-id="@Model.MedicalRecordId" class="btn btn-sm btn-warning">
                        <i class="bi bi-pencil me-1"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Número:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.RecordNumber</dd>

                        <dt class="col-sm-4">Fecha:</dt>
                        <dd class="col-sm-8">@Model.FormattedCreationDate</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            <span class="@Model.StatusClass">@Model.Status</span>
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Mascota:</dt>
                        <dd class="col-sm-8 fw-semibold">
                            <a asp-controller="Pets" asp-action="Details" asp-route-id="@Model.PetId" class="text-decoration-none">
                                @Model.PetName (@ViewBag.PetCode)
                            </a>
                        </dd>

                        <dt class="col-sm-4">Dueño:</dt>
                        <dd class="col-sm-8">@Model.OwnerName</dd>
                    </dl>
                </div>
            </div>

            <div class="mb-4">
                <h5 class="fw-semibold border-bottom pb-2 mb-3">Notas Generales</h5>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(ViewBag.GeneralNotes))
                        {
                            <p class="card-text">@ViewBag.GeneralNotes</p>
                        }
                        else
                        {
                            <p class="text-muted">No hay notas registradas</p>
                        }
                    </div>
                </div>
            </div>

            @if (!exporting)
            {
                <div class="mt-4">
                    <h5 class="fw-semibold border-bottom pb-2 mb-3">Consultas Relacionadas</h5>
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-info-circle fs-4 me-3"></i>
                        <div>
                            <h6 class="alert-heading mb-1">Vista previa de consultas</h6>
                            <p class="mb-0">Consultas médicas asociadas a este registro.</p>
                            <a asp-controller="MedicalConsultations" asp-action="Index" asp-route-recordId="@Model.MedicalRecordId" class="btn btn-link p-0">
                                Ver todas las consultas <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i> ID: @Model.MedicalRecordId | Creado: @Model.FormattedCreationDate
                </small>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-list me-1"></i> Volver al listado
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .status-active {
        color: #fff;
        background-color: #28a745;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-inactive {
        color: #fff;
        background-color: #6c757d;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-archived {
        color: #fff;
        background-color: #6f42c1;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .card {
        border-radius: 0.5rem;
    }

    dt {
        color: #6c757d;
    }
</style>