@model VetScan.Models.MedicalRecord
@{
    ViewData["Title"] = "Eliminar Registro Médico";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0"><i class="bi bi-exclamation-triangle me-2"></i>@ViewData["Title"]</h2>
                        <a asp-action="Index" class="btn btn-sm btn-outline-light">
                            <i class="bi bi-arrow-left me-1"></i> Volver
                        </a>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-danger d-flex align-items-center mb-4">
                        <i class="bi bi-exclamation-octagon-fill fs-4 me-3"></i>
                        <div>
                            <h5 class="alert-heading mb-2">¡Advertencia importante!</h5>
                            <p class="mb-0">Esta acción eliminará permanentemente este registro médico y no se puede deshacer.</p>
                        </div>
                    </div>

                    <h5 class="fw-semibold text-primary border-bottom pb-2 mb-3">Detalles del Registro</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Número de Registro:</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.RecordNumber</dd>

                        <dt class="col-sm-4">Mascota:</dt>
                        <dd class="col-sm-8">@Model.Pet.PetName</dd>

                        <dt class="col-sm-4">Fecha de Creación:</dt>
                        <dd class="col-sm-8">@Model.CreationDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            <span class="@(Model.Status == "Active" ? "status-active" : Model.Status == "Inactive" ? "status-inactive" : "status-archived")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>

                    <div class="alert alert-warning mt-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Confirmación requerida:</strong> ¿Estás seguro que deseas eliminar este registro médico?
                    </div>
                </div>

                <div class="card-footer bg-light">
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="MedicalRecordId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .status-active {
        color: #fff;
        background-color: #28a745;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-inactive {
        color: #fff;
        background-color: #6c757d;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .status-archived {
        color: #fff;
        background-color: #6f42c1;
        padding: 4px 10px;
        border-radius: 50px;
        font-size: 0.8em;
        font-weight: 500;
    }

    .card {
        border-radius: 0.5rem;
    }

    .alert-danger {
        border-left: 4px solid #dc3545;
    }

    .alert-warning {
        border-left: 4px solid #ffc107;
    }

    dt {
        color: #6c757d;
    }
</style>